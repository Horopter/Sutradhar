# Sutradhar API Configuration
# Copy this file to .env and configure your values
# For secrets (API keys, IDs, etc.), use .secrets.env instead (see .secrets.example)

# Server
PORT=2198
NODE_ENV=development

# Database - Convex (use .secrets.env if URL contains auth tokens)
CONVEX_URL=http://localhost:3210

# LLM Providers (move API keys to .secrets.env)
# OPENAI_API_KEY=move-to-secrets-env
# PERPLEXITY_API_KEY=move-to-secrets-env
LLM_DEFAULT_PROVIDER=openai
LLM_OPENAI_MODEL=gpt-4o-mini
LLM_PERPLEXITY_MODEL=pplx-7b-online
MOCK_LLM=true

# Retrieval (move API keys to .secrets.env)
# HYPERSPELL_API_KEY=move-to-secrets-env
HYPERSPELL_BASE_URL=https://api.hyperspell.ai
MOCK_RETRIEVAL=true
RETRIEVAL_TIMEOUT_MS=2500
RETRIEVAL_REQUIRE_HS=false

# Actions (Composio/Rube.app) - move API keys and IDs to .secrets.env
# COMPOSIO_API_KEY=move-to-secrets-env
# RUBE_API_KEY=move-to-secrets-env
# RUBE_PROJECT_ID=move-to-secrets-env
# RUBE_ORG_ID=move-to-secrets-env
# RUBE_USER_ID=move-to-secrets-env
RUBE_BASE_URL=https://api.rube.app
MOCK_ACTIONS=true
# SLACK_CHANNEL_ID=move-to-secrets-env
# GCAL_CALENDAR_ID=move-to-secrets-env
# GITHUB_REPO_SLUG=move-to-secrets-env

# Email - AgentMail (move API keys to .secrets.env)
# AGENTMAIL_API_KEY=move-to-secrets-env
AGENTMAIL_BASE_URL=https://api.agentmail.to
# AGENTMAIL_INBOX_ID=move-to-secrets-env
# AGENTMAIL_FROM_ADDRESS=move-to-secrets-env
# AGENTMAIL_FROM_NAME=move-to-secrets-env
# AGENTMAIL_WEBHOOK_SECRET=move-to-secrets-env
AGENTMAIL_DRY_RUN=false
# AGENTMAIL_TEST_TO=move-to-secrets-env

# Voice - LiveKit (move API keys to .secrets.env)
# LIVEKIT_URL=move-to-secrets-env
# LIVEKIT_API_KEY=move-to-secrets-env
# LIVEKIT_API_SECRET=move-to-secrets-env

# Browser Automation
MOCK_BROWSER=true
FORUM_URL=
# FORUM_USER=move-to-secrets-env
# FORUM_PASS=move-to-secrets-env
SCREENSHOT_DIR=./screenshots

# Caching (use .secrets.env if Redis URL contains password)
# REDIS_URL=move-to-secrets-env-if-contains-password
CACHE_DEFAULT_TTL=3600

# CORS & Security
ALLOWED_ORIGINS=
FRONTEND_URL=

# Monitoring (move Sentry DSN to .secrets.env)
# SENTRY_DSN=move-to-secrets-env
LOG_JSON=false
LOG_LEVEL=debug
LOG_FILE=false
LOG_PERSIST=true

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# Testing
RL_BYPASS=false
